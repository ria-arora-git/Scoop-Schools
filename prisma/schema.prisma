generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  childName    String   @default("Unknown")
  dob          String   @default("2000-01-01")
  gender       String   @default("Not Specified")
  photo        String   @default("")
  parentsName  String[]  
  contact      String   @default("")
  email        String   @unique  
  address      String   @default("")
  occupation   String[]  
  curriculum   String   @default("")
  schools      String[]  
  grade        String   @default("")
  createdAt    DateTime @default(now())
}




model School {
  id          Int     @id @default(autoincrement())
  name        String
  address     String
  city        String
  facilities  String
  contact     String?  
  email       String? 
  website     String?
  description String?
}

